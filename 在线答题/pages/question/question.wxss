/* pages/question/question.wxss */
page{
  background-color: #fde6b4;
}

.Interface{
  width: 90%;
  height: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
}
swiper{
  width: 100%;
  height: 100%;
}

.h1{
  flex: 2;
  font-size: 40rpx;
  font-weight: bold;
  padding-bottom: 20rpx;
}

radio-group{
  flex: 6;
  font-size: 32rpx;
}

radio{
  padding: 20rpx;
  display: block;
}

.option{
  flex: 2;
  padding-top: 40rpx;
  display: flex;
  justify-content: space-around;
}
.prev,.next,.tijiao{
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color:rgb(226, 222, 222);
  border-radius: 20rpx;
  padding:0 30rpx;
  color: white;
  font-weight: bold;
}

.next,.prev,.tijiao{
  background-color: #fde6b4;
}

.num{
  flex: 1;
  width: 100%;
  text-align: center;
}


.df{
  width: 90%;
  height: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 20rpx;
}
.df view{
  text-align: center;
  padding-bottom: 30rpx;
}
.df .tupian image{
  width: 300rpx;
  height: 300rpx;
}

.df .wz{
  font-size: 80rpx;
  color: rgb(240, 82, 114);
}