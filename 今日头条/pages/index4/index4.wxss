/* pages/index4/index4.wxss */
.fixed{
  position: fixed;
  z-index: 99;
}
.head{
  width: 100%;
  display: flex;
  background: #FF4500;
  padding: 10px 10px;
}

.head>view{
  color: white;
  line-height: 30px;
  font-size:large;
}

.head input{
  padding:5px;
  margin-left: 40rpx;
  border-radius: 5px;
  width: 60%;
  text-indent: 18px;
  background: white url(data:image/jpg;base64,) no-repeat 5px center;
}

.nav{
  padding:2px 10px;
  background-color: rgba(231, 227, 227);
  height: 30px;
 
}

.nav .scroll .dw{
  width: 100%;
  display: flex;
  white-space: nowrap;
}

.nav .scroll{
  overflow: hidden;
}

.nav .scroll .dw view{
  font-size:18px;
  display: block;
  padding:0 10rpx;
  margin:0 10rpx;
  line-height: 30px;
}

.nav .scroll .dw .active{
  color: red;
  height: 30px;
  border-bottom:2px solid red;
}

.body{
  padding:10px;
  overflow: hidden;
}

.body .node .wz{
  padding:5px 0;
  font-size: 38rpx;
}

.body .node{
  border-top:2px solid #dfdfdf;
  border-bottom:2px solid #dfdfdf;
  margin-bottom:20rpx;
}

.body .node .tp{
  display: flex;
  justify-content: space-between;
}

.body .node .tp image{
  width: 32%;
  height: 160rpx;
}

