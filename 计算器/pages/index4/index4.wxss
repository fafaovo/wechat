.head{
  background: rgb(242, 250, 252);
  height: 50vh;
  font-size: 80rpx;
  position: relative;
  /* 可见高度的50% */
}
.a1{
  position: absolute;
  bottom: 80rpx;
  right: 20rpx;
  text-align: right;
}

.a2{
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  text-align: right;
  font-size: 40rpx;
}


.footer{
  height: 50vh;
  display: flex;
  flex-direction: column;
}

.footer>view{
  flex: 20%;
  display: flex;
  border-top:1px solid rgb(117, 117, 117);
  font-size: 40rpx;
}

.footer>view>view{
  flex:25%;

  display: flex;
  align-items: center;
  justify-content: center;
}

.footer>view>view:nth-of-type(n+2)
{
  border-left:1px solid rgb(117, 117, 117);
}

.footer>view:nth-of-type(n+5)>view:nth-of-type(1)
{
  flex: 50%;
}

.active{
  background-color: #b8b8b8;
}